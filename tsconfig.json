{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "declaration": true,
    "noEmitOnError": true,
    "outDir": "build/artifacts/out",
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "test-browser.ts"
  ]
}