#!/usr/bin/env bash
set -e

source ./version.sh
source ./nvm.sh


if [[ ! $(command -v yarn) ]]; then
    npm install -g yarn
fi

yarn install

dist=dist
out=src

yarn clean
yarn generate
yarn build
yarn test

function package() {
    if [[ ! $(command -v envsubst) ]]; then
        sudo apt-get install gettext
    fi

    mkdir -p ${dist}
    envsubst < package.json > ${dist}/package.json
    cp -r ${out}/* ${dist}
    cp README.md LICENSE ${dist}
}

function publish() {
    mkdir -p ${dist}
    cat >${dist}/.npmrc <<EOL
@bodar:registry=https://registry.npmjs.org
//registry.npmjs.org/:_authToken=${NPM_TOKEN}
EOL
    pushd ${dist}
    npm publish --tag ${TAG} --access public
    popd
}

function ci() {
    package
    publish
}

if [[ -n "$1" ]]; then
    "$1"
fi